@model WebMVCFirebaseOffical.Models.KhoaModels

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="col-12">
            <div class="card">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <div class="card-body">
                            <h4 class="card-title">Khoa</h4>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group row">
                                <label for="fname" class="col-sm-2 text-right control-label col-form-label"> @Html.LabelFor(model => model.KH_MA)</label>

                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.KH_MA, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="fname" class="col-sm-2 text-right control-label col-form-label"> @Html.LabelFor(model => model.KH_TEN)</label>

                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.KH_TEN, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.KH_TEN, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="border-top">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-2 text-right control-label col-form-label"></label>
                                    <div class="col-md-9">
                                        <button type="submit" class="btn btn-success"> Lưu thay đổi</button>

                                        <button type="submit" class="btn btn-danger">  @Html.ActionLink("Trở về", "Index", null, new { style = "Color:White" })</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
