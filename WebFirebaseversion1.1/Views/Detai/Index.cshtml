@model IEnumerable<WebMVCFirebaseOffical.Models.DetaiModels>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-chart">
    <div class="card-footer">
        <h4>Thông tin đề tài </h4>
       
    </div>
    <div class="card-body"> 
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DT_MA)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DT_TEN)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DT_NGUOITAO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DT_NGAYSUA)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DT_NGUOISUA)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DT_TRANGTHAI)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DT_MA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DT_TEN)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DT_NGUOITAO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DT_NGAYSUA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DT_NGUOISUA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DT_TRANGTHAI)
                        </td>
                        <td>
                            <button class="btn btn-info" type="button">  @Html.ActionLink("Thông tin chi tiết", "Details", new { id = item.DT_MA }, new { style = "color:White" }) </button>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card" SS>
                <div class="card-body">
                    <div class="form-group row">
                        <label for="fname" class="col-sm-3 text-right control-label col-form-label"> Mã đề tài:</label>
                        <label class="col-sm-9 text-left control-label col-form-label">
                            @Html.DisplayFor(modelItem => item.DT_MA)
                        </label>
                    </div>
                    <div class="form-group row">
                        <label for="fname" class="col-sm-3 text-right control-label col-form-label"> Tên đề tài:</label>
                        <label class="col-sm-9 text-left control-label col-form-label">
                            @Html.DisplayFor(modelItem => item.DT_TEN)
                        </label>
                    </div>
                    <div class="form-group row">
                        <label for="fname" class="col-sm-3 text-right control-label col-form-label"> Người tạo:</label>
                        <label class="col-sm-9 text-left control-label col-form-label">
                            @Html.DisplayFor(modelItem => item.DT_NGUOITAO)
                        </label>
                    </div>
                    <div class="form-group row">
                        <label for="fname" class="col-sm-3 text-right control-label col-form-label"> Trạng thái:</label>
                        <label class="col-sm-9 text-left control-label col-form-label">
                            @Html.DisplayFor(modelItem => item.DT_TRANGTHAI)
                        </label>
                    </div>
                    <div class="border-top">
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="fname" class="col-sm-1 text-right control-label col-form-label"></label>
                                <div class="col-md-9">

                                    
                                    <button class="btn btn-info" type="button">  @Html.ActionLink("Thông tin chi tiết", "Details", new { id = item.DT_MA }, new { style = "color:White" }) </button>
                                     

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
