                            @Html.DisplayFor(modelItem => itemmm.DT_TRANGTHAI)
                        </label>
                    </div>
                    <div class="border-top">
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="fname" class="col-sm-1 text-right control-label col-form-label"></label>
                                <div class="col-md-9">
                                    @foreach (var delete in Model.danhmucDetaiModels)
                                    {
