                        <label class="col-sm-9 text-left control-label col-form-label">
                            @Html.DisplayFor(modelItem => itemmm.DT_MA)
                        </label>
                    </div>
                    <div class="form-group row">
                        <label for="fname" class="col-sm-3 text-right control-label col-form-label"> Tên đề tài:</label>
                        <label class="col-sm-9 text-left control-label col-form-label">
                            @Html.DisplayFor(modelItem => itemmm.DT_TEN)
                        </label>
                    </div>
                    <div class="form-group row">
                        <label for="fname" class="col-sm-3 text-right control-label col-form-label"> Người tạo:</label>
                        <label class="col-sm-9 text-left control-label col-form-label">
                            @Html.DisplayFor(modelItem => itemmm.DT_NGUOITAO)
                        </label>
                    </div>
                    <div class="form-group row">
                        <label for="fname" class="col-sm-3 text-right control-label col-form-label"> Trạng thái:</label>
